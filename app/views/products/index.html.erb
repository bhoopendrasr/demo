<h1>Listing of products</h1>
 <table>
  <tr>
    <th>Product name</th>
    <th colspan="3"></th>
    <th>Product cost</th>
    <th colspan="3"></th>
    <th>Product part</th>
    <th colspan="3"></th>
    <th>Discount</th>
    <th></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.product_name %></td>
      <th colspan="3"></th>
      <td><%= product.product_cost %></td>
      <th colspan="3"></th>
      <td><%= product.product_part %></td>
      <th colspan="3"></th>
      <td><%= product.Discount %></td>
      <th></th>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
