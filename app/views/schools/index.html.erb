<table>
  <tr>
    <th>School name</th>
    <th colspan="3"></th>
    <th>Address</th>
    <th></th>
  </tr>
 
  <% @schools.each do |school| %>
    <tr>
      <td><%= school.name %></td>
      <th colspan="3"></th>
      <td><%= school.address %></td>
      <th></th>
      <td><%= link_to 'Show', school_path(school) %></td>
      <td><%= link_to 'Edit', edit_school_path(school) %></td>
      <td><%= link_to 'Destroy', school_path(school),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<body bgcolor="ffffff">
  <%= link_to 'new_school',new_school_path %>
  </body>